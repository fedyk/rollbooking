<div class="container">
  <h1><%= business.name %></h1>

  <div class="row">
    <div class="col flex-grow-0">
      <div class="border p-3">
        <%- include('./../components/datepicker') %>
      </div>
    </div>

    <div class="col">

      <div class="text-right mb-3">
        <a href="/events/new?b=<%= business.id %>" class="btn btn-primary">New Appointment</a>
      </div>

      <div class="card">
        <div class="card-header">
          Appointments
        </div>

        <div class="list-group list-group-flush">
          <% formattedEvents.forEach(function(formattedEvent) { %>
          <a href="<%= formattedEvent.url %>" class="list-group-item list-group-item-action">
            <div class="h6"><%= formattedEvent.clientName %></div>
            <div><%= formattedEvent.time %>, <%= formattedEvent.serviceName %> <span class="text-muted">by</span> <%= formattedEvent.assignerName %></div>
          </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>