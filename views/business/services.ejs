<h5 class="mb-3">Services</h5>

<ul class="list-group list-group-flush mb-3">
  <% services.forEach(function(service) { %>
  <li class="list-group-item d-flex justify-content-between px-0">
    <div>
      <div class="d-flex justify-content-between">
        <h6 class="my-0"><%= service.name %> Î‡ <span class="text-muted"><%= service.price %></span></h6>
        
      </div>
      <p class="mb-3 text-muted small"><%= service.description %></p>
      <div class="d-flex flex-wrap">
        <% service.slots.forEach(function(slot) { %>
        <a href="<%= slot.url %>" class="btn btn-sm btn-outline-primary mx-2 mb-2" title="<%= slot.title %>"><%= slot.text %></a>
        <% }) %>
      </div>
    </div>
  </li>
  <% }) %>
</ul>