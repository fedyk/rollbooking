<h3 class="text-center text-dark mb-3">Welcome</h3>

<form action="" method="POST" style="max-width: 300px;" class="mx-auto mb-3">
  <div class="form-group">
    <label for="input1">Email</label>
    <input type="text" name="email" value="<%= email %> " class="form-control" id="input1" disabled>
  </div>
  <div class="form-group">
    <label for="input2">Name</label>
    <input type="text" name="name" class="form-control" id="input2" required>
  </div>
  <div class="form-group">
    <label for="input3">Password</label>
    <input type="password" name="password" class="form-control" id="input3">
  </div>
  
    <input type="hidden" name="timezone" class="timezone-auto-detect">

  <button type="submit" class="btn btn-success btn-block">Continue</button>
</form>