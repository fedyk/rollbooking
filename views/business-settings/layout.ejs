<div class="pt-3">
  <div class="row">
    <div class="col flex-grow-0">
      <div class="card" style="width: 256px;">
        <div class="card-header">
          <a href="<%= profileUrl %>">Hello</a> / Settings
        </div>
        <div class="list-group list-group-flush">
          <% links.forEach((link, index) => { %>
          <a class="list-group-item list-group-item-action <%= selectedItemId === link.id ? 'active' : '' %>"
            href="<%= link.url %>"><%= link.title %></a>
          <% }) %>
        </div>
      </div>
    </div>
    <div class="col">
      <%- body %>
    </div>
  </div>
</div>