<div class="d-flex mb-3 pb-1 border-bottom">
  <a class="h5" href="<%= listUrl %>">Users</a>
  <h5 class="text-muted mx-1">/</h5>
  <h5><%= pageTitle %></h5>
</div>

<form method="POST" action="">
  <div class="form-group">
    <label for="nameInput">Name</label>
    <input type="text" name="name" value="<%= user.name %>" class="form-control" id="nameInput"
      aria-describedby="nameHelp" autofocus>
  </div>

  <div class="form-group">
    <label for="positionInput">Position</label>
    <textarea name="position" class="form-control" id="positionInput" rows="2"
      placeholder="Tell what are you doing the best"><%= user.position %></textarea>
  </div>

  <div class="form-group">
    <label for="positionInput">Position</label>
    <select class="form-control" name="role" <%= user.role === "owner" ? "disabled" : "" %>>
      <option value="owner" <%= user.role === "owner" ? "selected" : "" %> disabled>Owner</option>
      <option value="admin" <%= user.role === "admin" ? "selected" : "" %>>Admin</option>
      <option value="normal" <%= user.role === "normal" ? "selected" : "" %>>Normal</option>
    </select>
  </div>

  <button type="submit" class="btn btn-success">Update</button>
</form>