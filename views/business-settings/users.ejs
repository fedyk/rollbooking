<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center py-2 bg-transparent">
    <span>Users</span>
    <a class="btn btn-sm btn-success" href="<%= addUserUrl %>">Add user</a>
  </div>

  <ul class="list-group list-group-flush">
    <% users.forEach(user => { %>
    <a href="<%= user.url %>" class="list-group-item list-group-item-action d-flex">

      <img src="<%= user.avatarUrl %>" class="mr-3 rounded" alt="<%= user.name %>" width="64">
      <div class="">
        <div class="text-dark font-weight-bold"><%= user.name %></div>
        <div class="text-muted"><%= user.position %></div>
      </div>
    </a>
    <% }) %>
  </ul>
</div>
